<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/jdl"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#B80909"
        android:text="Contoh Intent :"
        android:textColor="#C7C6C6"
        android:textSize="30dp"
        android:textAlignment="inherit"/>

    <Button
        android:text="Telepon"
        android:textSize="20dp"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jdl"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:padding="20dp"
        android:id="@+id/btnpgl"
        android:onClick="panggil"/>

    <Button
        android:text="Buka Browser"
        android:textSize="20dp"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnpgl"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_marginTop="11dp"
        android:id="@+id/btnbuka"
        android:onClick="buka"/>

    <Button
        android:text="Tentang Aplikasi"
        android:textSize="20dp"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnbuka"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_marginTop="11dp"
        android:id="@+id/btntntg"
        android:onClick="tentang"/>

</RelativeLayout>